{
  "name": "craft-boilerplate",
  "main": "webpack.mix.js",
  "private": true,
  "browserslist": [
    "last 2 version",
    "> 0.25%",
    "not dead",
    "ie >= 11",
    "ios >= 7",
    "android >= 4.4"
  ],
  "scripts": {
    "dev": "NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "fe": "cross-env NODE_ENV=frontend webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "predev": "rimraf web/assets",
    "prewatch": "rimraf web/assets",
    "preproduction": "rimraf web/assets",
    "prefe": "rimraf frontend/dist"
  },
  "dependencies": {
    "foundation-sites": "6.5.3",
    "gsap": "2.0.2",
    "headroom.js": "0.9.4",
    "jquery": "^3.2",
    "swiper": "4.4.6",
    "waypoints": "4.0.1",
    "what-input": "4.3.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-transform-template-literals": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "2.0.1",
    "cross-env": "5.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "4.19.1",
    "file-loader": "3.0.1",
    "handlebars": "4.1.0",
    "laravel-mix": "^4.0.14",
    "laravel-mix-pug": "0.3.0",
    "pug": "2.0.3",
    "resolve-url-loader": "2.3.1",
    "rimraf": "^2.6.2",
    "sass": "^1.16.1",
    "sass-loader": "7.*",
    "svg-spritemap-webpack-plugin": "^3.2.0",
    "vue-template-compiler": "^2.5.22",
    "webfonts-loader": "^4.3.0",
    "yargs": "3.32.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venveo/craft-boilerplate.git"
  }
}
